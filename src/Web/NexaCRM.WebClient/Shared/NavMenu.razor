@code {
    private bool showBasicSettingsSubmenu = false;
    private bool showOrganizationSubmenu = false;
    private bool showDbManagementSubmenu = false;
    private bool showStatisticsSubmenu = false;
    private bool showCustomerCenterSubmenu = false;
    private bool showScheduleSubmenu = false;
    private bool showSmsSubmenu = false;
    private bool showSystemSubmenu = false;

    private bool isDarkMode = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // JSÏóêÏÑú ÌòÑÏû¨ ÌÖåÎßà ÏÉÅÌÉúÎ•º Î∞õÏïÑÏò¥
            isDarkMode = await JSRuntime.InvokeAsync<bool>("isDarkMode");
            StateHasChanged();
        }
    }

    private bool IsDarkMode() => isDarkMode;

    private void ToggleBasicSettingsSubmenu() => showBasicSettingsSubmenu = !showBasicSettingsSubmenu;
    private void ToggleOrganizationSubmenu() => showOrganizationSubmenu = !showOrganizationSubmenu;
    private void ToggleDbManagementSubmenu() => showDbManagementSubmenu = !showDbManagementSubmenu;
    private void ToggleStatisticsSubmenu() => showStatisticsSubmenu = !showStatisticsSubmenu;
    private void ToggleCustomerCenterSubmenu() => showCustomerCenterSubmenu = !showCustomerCenterSubmenu;
    private void ToggleScheduleSubmenu() => showScheduleSubmenu = !showScheduleSubmenu;
    private void ToggleSmsSubmenu() => showSmsSubmenu = !showSmsSubmenu;
    private void ToggleSystemSubmenu() => showSystemSubmenu = !showSystemSubmenu;

    private async Task CloseNavMenu()
    {
        await JSRuntime.InvokeVoidAsync("window.navigationHelper.toggleMenu", true);
    }

    private async Task Logout()
    {
        await CloseNavMenu();
        if (AuthStateProvider is CustomAuthStateProvider customAuthProvider)
        {
            customAuthProvider.Logout();
        }
        await JSRuntime.InvokeVoidAsync("eval", @"
            if (window.authManager && window.authManager.logout) {
                window.authManager.logout('manual_logout');
            } else {
                localStorage.clear();
                sessionStorage.clear();
                window.location.href = '/login';
            }
        ");
    }
}
