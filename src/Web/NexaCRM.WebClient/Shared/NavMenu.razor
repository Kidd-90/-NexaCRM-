@using NexaCRM.WebClient.Services
@using NexaCRM.WebClient.Services.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components

@inject IStringLocalizer<NavMenu> Localizer
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IRolePermissionService RolePermissionService

<style>
    /* Override hardcoded colors to support dark mode theming */
    .nav-section-header {
        color: var(--text-primary);
    }

    .submenu-link {
        color: var(--text-secondary);
    }

    .submenu-link:hover {
        color: var(--text-primary);
    }

    .submenu-link.active {
        background-color: var(--primary-color);
        color: white !important; /* Ensure text is white on active background */
    }
</style>

<div @onclick:stopPropagation="true">
    <nav class="flex-column">
        <div class="nav-scroll-container">
            <!-- Always visible base menu -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseNavMenu">
                    <span class="oi oi-home" aria-hidden="true"></span> @Localizer["Home"]
                </NavLink>
            </div>

            <!-- Menus for authenticated users -->
            <AuthorizeView>
                <Authorized>
                    <!-- ðŸ“Š Dashboard -->
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="main-dashboard" @onclick="CloseNavMenu">
                            <span class="oi oi-dashboard" aria-hidden="true"></span> @Localizer["Dashboard"]
                        </NavLink>
                    </div>

                    <!-- ðŸ—ƒï¸ DB Customer Management -->
                    <AuthorizeView Roles="Sales,Manager">
                        <div class="nav-item px-3">
                            <div class="nav-section-header" @onclick="ToggleDbCustomerSubmenu" style="cursor: pointer;">
                                <span class="oi oi-folder" aria-hidden="true"></span>
                                @Localizer["DbCustomerManagement"]
                                <span class="submenu-toggle @(showDbCustomerSubmenu ? "expanded" : "collapsed")">â–¼</span>
                            </div>
                            
                            @if (showDbCustomerSubmenu)
                            {
                                <div class="nav-submenu">
                                    <!-- Manager-specific links -->
                                    <AuthorizeView Roles="Manager">
                                        <NavLink class="nav-link submenu-link" href="db/customer/all" @onclick="CloseNavMenu">
                                            <span class="oi oi-spreadsheet" aria-hidden="true"></span> @Localizer["AllDbList"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="db/customer/team-status" @onclick="CloseNavMenu">
                                            <span class="oi oi-people" aria-hidden="true"></span> @Localizer["TeamDbStatus"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="db/customer/assigned-today" @onclick="CloseNavMenu">
                                            <span class="oi oi-calendar" aria-hidden="true"></span> @Localizer["TodaysAssignedDb"]
                                        </NavLink>
                                    </AuthorizeView>

                                    <!-- Common link for Sales and Manager -->
                                    <NavLink class="nav-link submenu-link" href="db/customer/my-list" @onclick="CloseNavMenu">
                                        <span class="oi oi-person" aria-hidden="true"></span> @Localizer["MyDbList"]
                                    </NavLink>

                                    <!-- Sales-specific links -->
                                    <AuthorizeView Roles="Sales">
                                        <NavLink class="nav-link submenu-link" href="db/customer/new" @onclick="CloseNavMenu">
                                            <span class="oi oi-bell" aria-hidden="true"></span> @Localizer["NewDbList"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="db/customer/starred" @onclick="CloseNavMenu">
                                            <span class="oi oi-star" aria-hidden="true"></span> @Localizer["StarredDbList"]
                                        </NavLink>
                                    </AuthorizeView>
                                </div>
                            }
                        </div>
                    </AuthorizeView>

                    <!-- ðŸ”„ DB Distribution Management -->
                    <AuthorizeView Roles="Sales,Manager">
                        <div class="nav-item px-3">
                            <div class="nav-section-header" @onclick="ToggleDbDistributionSubmenu" style="cursor: pointer;">
                                <span class="oi oi-fork" aria-hidden="true"></span>
                                @Localizer["DbDistributionManagement"]
                                <span class="submenu-toggle @(showDbDistributionSubmenu ? "expanded" : "collapsed")">â–¼</span>
                            </div>

                            @if (showDbDistributionSubmenu)
                            {
                                <div class="nav-submenu">
                                    <!-- Manager-specific links -->
                                    <AuthorizeView Roles="Manager">
                                        <NavLink class="nav-link submenu-link" href="db/distribution/unassigned" @onclick="CloseNavMenu">
                                            <span class="oi oi-inbox" aria-hidden="true"></span> @Localizer["UnassignedDbList"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="db/distribution/status" @onclick="CloseNavMenu">
                                            <span class="oi oi-graph" aria-hidden="true"></span> @Localizer["DbDistributionStatus"]
                                        </NavLink>
                                    </AuthorizeView>

                                    <!-- Sales-specific links -->
                                    <AuthorizeView Roles="Sales">
                                        <NavLink class="nav-link submenu-link" href="db/distribution/newly-assigned" @onclick="CloseNavMenu">
                                            <span class="oi oi-envelope-new" aria-hidden="true"></span> @Localizer["NewlyAssignedDb"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="db/distribution/my-history" @onclick="CloseNavMenu">
                                            <span class="oi oi-task" aria-hidden="true"></span> @Localizer["MyAssignmentHistory"]
                                        </NavLink>
                                    </AuthorizeView>
                                </div>
                            }
                        </div>
                    </AuthorizeView>

                    <!-- Other original menus -->
                    <AuthorizeView Roles="Manager" Context="managerContext">
                        <Authorized>
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="sales-manager-dashboard" @onclick="CloseNavMenu">
                                    <span class="oi oi-person" aria-hidden="true"></span> @Localizer["ManagerDashboard"]
                                </NavLink>
                            </div>
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="reports" @onclick="CloseNavMenu">
                                    <span class="oi oi-bar-chart" aria-hidden="true"></span> @Localizer["Reports"]
                                </NavLink>
                            </div>
                        </Authorized>
                    </AuthorizeView>

                    <AuthorizeView Roles="Admin" Context="adminContext">
                        <Authorized>
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="admin-dashboard" @onclick="CloseNavMenu">
                                    <span class="oi oi-cog" aria-hidden="true"></span> @Localizer["Settings"]
                                </NavLink>
                            </div>
                        </Authorized>
                    </AuthorizeView>

                    <!-- Logout button -->
                    <div class="nav-item px-3 mt-auto">
                        <button class="nav-link btn btn-link" @onclick="Logout">
                            <span class="oi oi-account-logout" aria-hidden="true"></span> @Localizer["Logout"]
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="login" @onclick="CloseNavMenu">
                            <span class="oi oi-account-login" aria-hidden="true"></span> @Localizer["Login"]
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
</div>

@code {
    private bool showDbCustomerSubmenu = false;
    private bool showDbDistributionSubmenu = false;

    private void ToggleDbCustomerSubmenu()
    {
        showDbCustomerSubmenu = !showDbCustomerSubmenu;
    }

    private void ToggleDbDistributionSubmenu()
    {
        showDbDistributionSubmenu = !showDbDistributionSubmenu;
    }

    private async Task CloseNavMenu()
    {
        await JSRuntime.InvokeVoidAsync("window.navigationHelper.toggleMenu", true);
    }

    private async Task Logout()
    {
        await CloseNavMenu();
        if (AuthStateProvider is CustomAuthStateProvider customAuthProvider)
        {
            customAuthProvider.Logout();
        }
        await JSRuntime.InvokeVoidAsync("eval", @"
            if (window.authManager && window.authManager.logout) {
                window.authManager.logout('manual_logout');
            } else {
                localStorage.clear();
                sessionStorage.clear();
                window.location.href = '/login';
            }
        ");
    }
}
