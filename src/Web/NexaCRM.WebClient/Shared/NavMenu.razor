@using NexaCRM.WebClient.Services
@using NexaCRM.WebClient.Services.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components

@inject IStringLocalizer<NavMenu> Localizer
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IRolePermissionService RolePermissionService

<!-- Í≥†Ï†ïÎêú ÌñÑÎ≤ÑÍ±∞ Î≤ÑÌäº -->
<button title="Navigation menu" class="floating-menu-toggle" @onclick="ToggleNavMenu">
    <span class="navbar-toggler-icon"></span>
</button> 

<div class="@NavMenuCssClass" @onclick:stopPropagation="true">
    <nav class="flex-column">
        <!-- Ìï≠ÏÉÅ ÌëúÏãúÎêòÎäî Í∏∞Î≥∏ Î©îÎâ¥ -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseNavMenu">
                <span class="oi oi-home" aria-hidden="true"></span> @Localizer["Home"]
            </NavLink>
        </div>

        <!-- Ïù∏Ï¶ùÎêú ÏÇ¨Ïö©ÏûêÎßå Î≥º Ïàò ÏûàÎäî Î©îÎâ¥ -->
        <AuthorizeView>
            <Authorized>
                <!-- üìä ÎåÄÏãúÎ≥¥Îìú -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="main-dashboard" @onclick="CloseNavMenu">
                        <span class="oi oi-dashboard" aria-hidden="true"></span> @Localizer["Dashboard"]
                    </NavLink>
                </div>

                <!-- üë• Í≥†Í∞ùÍ¥ÄÎ¶¨ -->
                <AuthorizeView Roles="Sales,Manager">
                    <Authorized Context="customerContext">
                        @if (canAccessCustomerManagement)
                        {
                            <div class="nav-item px-3">
                                <div class="nav-section-header" @onclick="ToggleCustomerSubmenu" style="cursor: pointer;">
                                    <span class="oi oi-people" aria-hidden="true"></span> 
                                    @Localizer["CustomerManagement"]
                                    <span class="submenu-toggle @(showCustomerSubmenu ? "expanded" : "collapsed")">‚ñº</span>
                                </div>
                                
                                @if (showCustomerSubmenu)
                                {
                                    <div class="nav-submenu">
                                        <NavLink class="nav-link submenu-link" href="customer-segmentation-tool" @onclick="CloseNavMenu">
                                            <span class="oi oi-graph" aria-hidden="true"></span> @Localizer["CustomerSegmentation"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="customer-support-dashboard" @onclick="CloseNavMenu">
                                            <span class="oi oi-headphones" aria-hidden="true"></span> @Localizer["CustomerSupportDashboard"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="customer-support-knowledge-base" @onclick="CloseNavMenu">
                                            <span class="oi oi-book" aria-hidden="true"></span> @Localizer["KnowledgeBase"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="customer-support-ticket-management-interface" @onclick="CloseNavMenu">
                                            <span class="oi oi-task" aria-hidden="true"></span> @Localizer["TicketManagement"]
                                        </NavLink>
                                        <NavLink class="nav-link submenu-link" href="customer-feedback-and-survey-management-tool" @onclick="CloseNavMenu">
                                            <span class="oi oi-clipboard" aria-hidden="true"></span> @Localizer["FeedbackSurvey"]
                                        </NavLink>
                                    </div>
                                }
                            </div>
                        }
                    </Authorized>
                </AuthorizeView>

                <!-- üìà ÏòÅÏóÖÍ¥ÄÎ¶¨ (Í∏∞Ï°¥ Sales Î©îÎâ¥Îì§ÏùÑ Ïó¨Í∏∞Î°ú ÌÜµÌï©) -->
                <AuthorizeView Roles="Sales,Manager" Context="salesContext">
                    <Authorized>
                        <div class="nav-item px-3">
                            <div class="nav-section-header" @onclick="ToggleSalesSubmenu" style="cursor: pointer;">
                                <span class="oi oi-graph" aria-hidden="true"></span> 
                                @Localizer["SalesManagement"]
                                <span class="submenu-toggle @(showSalesSubmenu ? "expanded" : "collapsed")">‚ñº</span>
                            </div>
                            
                            @if (showSalesSubmenu)
                            {
                                <div class="nav-submenu">
                                    <NavLink class="nav-link submenu-link" href="sales-pipeline" @onclick="CloseNavMenu">
                                        <span class="oi oi-list-rich" aria-hidden="true"></span> @Localizer["SalesPipeline"]
                                    </NavLink>
                                    <NavLink class="nav-link submenu-link" href="contacts" @onclick="CloseNavMenu">
                                        <span class="oi oi-people" aria-hidden="true"></span> @Localizer["Contacts"]
                                    </NavLink>
                                </div>
                            }
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- üìã Î¶¨Ìè¨Ìä∏ (ManagerÎßå) -->
                <AuthorizeView Roles="Manager" Context="managerContext">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="sales-manager-dashboard" @onclick="CloseNavMenu">
                                <span class="oi oi-person" aria-hidden="true"></span> @Localizer["ManagerDashboard"]
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="reports" @onclick="CloseNavMenu">
                                <span class="oi oi-bar-chart" aria-hidden="true"></span> @Localizer["Reports"]
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <!-- ‚öôÔ∏è ÏÑ§Ï†ï (AdminÎßå) -->
                <AuthorizeView Roles="Admin" Context="adminContext">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="admin-dashboard" @onclick="CloseNavMenu">
                                <span class="oi oi-cog" aria-hidden="true"></span> @Localizer["Settings"]
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <div class="nav-item px-3 mt-auto">
                    <button class="nav-link btn btn-link" @onclick="Logout">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> @Localizer["Logout"]
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login" @onclick="CloseNavMenu">
                        <span class="oi oi-account-login" aria-hidden="true"></span> @Localizer["Login"]
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool showCustomerSubmenu = false;
    private bool showSalesSubmenu = false;
    private bool canAccessCustomerManagement = false;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        await CheckPermissions();
    }

    private async Task CheckPermissions()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        
        // Customer management access should be available to both Sales and Manager roles
        canAccessCustomerManagement = user.Identity?.IsAuthenticated == true && 
                                    (user.IsInRole("Sales") || user.IsInRole("Manager") || user.IsInRole("Admin"));
    }

    private void ToggleCustomerSubmenu()
    {
        showCustomerSubmenu = !showCustomerSubmenu;
    }

    private void ToggleSalesSubmenu()
    {
        showSalesSubmenu = !showSalesSubmenu;
    }

    private async Task ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        // JavaScript Ìï®Ïàò Ìò∏Ï∂úÌïòÏó¨ UI ÏóÖÎç∞Ïù¥Ìä∏
        await JSRuntime.InvokeVoidAsync("window.navigationHelper.toggleMenu", collapseNavMenu);
    }

    private async Task CloseNavMenu()
    {
        collapseNavMenu = true;
        // JavaScript Ìï®Ïàò Ìò∏Ï∂úÌïòÏó¨ Î©îÎâ¥ Îã´Í∏∞
        await JSRuntime.InvokeVoidAsync("window.navigationHelper.toggleMenu", collapseNavMenu);
    }

    private async Task Logout()
    {
        await CloseNavMenu(); // Î°úÍ∑∏ÏïÑÏõÉ ÏãúÏóêÎèÑ Î©îÎâ¥ Îã´Í∏∞
        
        // CustomAuthStateProviderÎ°ú Ï∫êÏä§ÌåÖÌïòÏó¨ Logout Î©îÏÑúÎìú Ìò∏Ï∂ú
        if (AuthStateProvider is CustomAuthStateProvider customAuthProvider)
        {
            customAuthProvider.Logout();
        }
        
        // auth managerÎ•º ÌÜµÌïú ÏôÑÏ†ÑÌïú Î°úÍ∑∏ÏïÑÏõÉ Ï≤òÎ¶¨
        await JSRuntime.InvokeVoidAsync("eval", @"
            if (window.authManager && window.authManager.logout) {
                window.authManager.logout('manual_logout');
            } else {
                localStorage.clear();
                sessionStorage.clear();
                window.location.href = '/login';
            }
        ");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Ï¥àÍ∏∞ Î†åÎçîÎßÅ ÌõÑ JavaScript Ï¥àÍ∏∞Ìôî
            await JSRuntime.InvokeVoidAsync("window.navigationHelper.setupOverlayHandler");
            // Ï¥àÍ∏∞ ÏÉÅÌÉúÎ•º ÌôïÏã§Ìûà ÏÑ§Ï†ï (Î©îÎâ¥ Îã´Ìûå ÏÉÅÌÉú)
            await JSRuntime.InvokeVoidAsync("window.navigationHelper.toggleMenu", true);
        }
    }
}
