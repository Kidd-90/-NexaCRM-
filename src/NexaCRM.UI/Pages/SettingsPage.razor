            <div class="px-4 py-3 container">
              <input type="text" class="mb-2 p-2 border border-soft rounded w-100" placeholder='@Localizer["Search"]' @bind="searchTerm" />
              <div class="user-table overflow-x-auto rounded-3 border border-soft bg-surface-soft">
                <table class="min-w-full">
                  <thead>
                    <tr class="bg-surface-soft">
                      <th class="table-ea08c9dc-38a0-443e-b93b-5bc9be11998c-column-120 px-4 py-3 text-start text-ink ui-width-400 small fw-semibold lh-base">@Localizer["Name"]</th>
                      <th class="table-ea08c9dc-38a0-443e-b93b-5bc9be11998c-column-240 px-4 py-3 text-start text-ink ui-width-400 small fw-semibold lh-base">@Localizer["Email"]</th>
                      <th class="table-ea08c9dc-38a0-443e-b93b-5bc9be11998c-column-360 px-4 py-3 text-start text-ink ui-width-60 small fw-semibold lh-base">@Localizer["Role"]</th>
                      <th class="table-ea08c9dc-38a0-443e-b93b-5bc9be11998c-column-480 px-4 py-3 text-start text-ink ui-width-60 small fw-semibold lh-base">@Localizer["Status"]</th>
                      <th class="table-ea08c9dc-38a0-443e-b93b-5bc9be11998c-column-600 px-4 py-3 text-start text-ink ui-width-60 text-ink-muted small fw-semibold lh-base">
                        @Localizer["Actions"]
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    @foreach (var user in FilteredUsers)
                    {
                      <tr class="border-top border-soft">
                        <td data-label='@Localizer["Name"]' class="table-ea08c9dc-38a0-443e-b93b-5bc9be11998c-column-120 ui-min-h-72 px-4 py-2 ui-width-400 text-ink small fw-normal lh-base">
