                          <div class="d-flex gap-2">
                            <button class="text-primary" @onclick="() => OpenEdit(user)">@Localizer["Edit"]</button>
                            <button class="text-red-600" @onclick="() => OpenDelete(user)">@Localizer["Delete"]</button>
