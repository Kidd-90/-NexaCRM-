@page "/tasks-page"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<TasksPage> Localizer

<PageTitle>@Localizer["Tasks"] - NexaCRM</PageTitle>

<div class="relative flex size-full min-h-screen flex-col bg-slate-50 group/design-root overflow-x-hidden">
    <div class="layout-container flex h-full grow flex-col">
        <div class="px-4 md:px-40 flex flex-1 justify-center py-5">
            <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
                <div class="flex flex-wrap justify-between gap-3 p-4">
                    <p class="text-[#0e131b] tracking-light text-[32px] font-bold leading-tight min-w-72">@Localizer["TaskManagement"]</p>
                </div>
                
                <!-- Mobile-friendly task cards -->
                <div class="grid gap-4 p-4">
                    <div class="flex flex-col gap-3 rounded-lg border border-[#d0d9e7] bg-white p-4 dashboard-card">
                        <div class="flex items-center justify-between">
                            <h3 class="text-[#0e131b] text-lg font-bold">@Localizer["FollowUp"]</h3>
                            <span class="bg-red-100 text-red-800 text-sm font-medium px-2.5 py-0.5 rounded">@Localizer["High"]</span>
                        </div>
                        <p class="text-[#4d6a99] text-sm">@Localizer["DueDate"]: 2024-07-15</p>
                        <p class="text-[#0e131b] text-sm">@Localizer["FollowUpDescription"]</p>
                    </div>
                    
                    <div class="flex flex-col gap-3 rounded-lg border border-[#d0d9e7] bg-white p-4 dashboard-card">
                        <div class="flex items-center justify-between">
                            <h3 class="text-[#0e131b] text-lg font-bold">@Localizer["PreparePresentation"]</h3>
                            <span class="bg-yellow-100 text-yellow-800 text-sm font-medium px-2.5 py-0.5 rounded">@Localizer["Medium"]</span>
                        </div>
                        <p class="text-[#4d6a99] text-sm">@Localizer["DueDate"]: 2024-07-20</p>
                        <p class="text-[#0e131b] text-sm">@Localizer["PrepareDescription"]</p>
                    </div>
                    
                    <div class="flex flex-col gap-3 rounded-lg border border-[#d0d9e7] bg-white p-4 dashboard-card">
                        <div class="flex items-center justify-between">
                            <h3 class="text-[#0e131b] text-lg font-bold">@Localizer["ReviewCampaign"]</h3>
                            <span class="bg-green-100 text-green-800 text-sm font-medium px-2.5 py-0.5 rounded">@Localizer["Low"]</span>
                        </div>
                        <p class="text-[#4d6a99] text-sm">@Localizer["DueDate"]: 2024-07-25</p>
                        <p class="text-[#0e131b] text-sm">@Localizer["ReviewDescription"]</p>
                    </div>
                </div>
                
                <!-- Add new task button -->
                <div class="px-4 py-3">
                    <button class="flex max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 bg-[#3b82f6] text-white gap-2 text-base font-bold leading-normal tracking-[0.015em] min-w-0 px-4 w-full dashboard-button">
                        <span class="truncate">@Localizer["AddNewTask"]</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
