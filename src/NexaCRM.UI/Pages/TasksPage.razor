@page "/tasks-page"
@attribute [Authorize(Roles = "Admin,Sales,Manager")]
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<TasksPage> Localizer

<PageTitle>@Localizer["Tasks"] - NexaCRM</PageTitle>

<div class="position-relative d-flex min-vh-100 flex-column bg-surface-soft overflow-x-hidden common-page-container">
    <div class="layout-container d-flex h-100 flex-grow-1 flex-column">
        <div class="px-4 d-flex flex-grow-1 justify-content-center py-5">
            <div class="layout-content-container d-flex flex-column ui-max-w-960 flex-grow-1">
                <div class="d-flex flex-wrap justify-content-between gap-3 p-4">
                    <p class="text-ink fs-1 fw-bold lh-sm ui-min-w-18rem">@Localizer["TaskManagement"]</p>
                </div>
                
                <!-- Mobile-friendly task cards -->
                <div class="d-grid gap-4 p-4">
                    <div class="d-flex flex-column gap-3 rounded-3 border border-soft bg-white p-4 dashboard-card">
                        <div class="d-flex align-items-center justify-content-between">
                            <h3 class="text-ink fs-4 fw-bold">@Localizer["FollowUp"]</h3>
                            <span class="bg-red-100 text-red-800 small fw-semibold px-3 py-1 rounded">@Localizer["High"]</span>
                        </div>
                        <p class="text-ink-muted small">@Localizer["DueDate"]: 2024-07-15</p>
                        <p class="text-ink small">@Localizer["FollowUpDescription"]</p>
                    </div>
                    
                    <div class="d-flex flex-column gap-3 rounded-3 border border-soft bg-white p-4 dashboard-card">
                        <div class="d-flex align-items-center justify-content-between">
                            <h3 class="text-ink fs-4 fw-bold">@Localizer["PreparePresentation"]</h3>
                            <span class="bg-warning-subtle text-warning small fw-semibold px-3 py-1 rounded">@Localizer["Medium"]</span>
                        </div>
                        <p class="text-ink-muted small">@Localizer["DueDate"]: 2024-07-20</p>
                        <p class="text-ink small">@Localizer["PrepareDescription"]</p>
                    </div>
                    
                    <div class="d-flex flex-column gap-3 rounded-3 border border-soft bg-white p-4 dashboard-card">
                        <div class="d-flex align-items-center justify-content-between">
                            <h3 class="text-ink fs-4 fw-bold">@Localizer["ReviewCampaign"]</h3>
                            <span class="bg-green-100 text-success small fw-semibold px-3 py-1 rounded">@Localizer["Low"]</span>
                        </div>
                        <p class="text-ink-muted small">@Localizer["DueDate"]: 2024-07-25</p>
                        <p class="text-ink small">@Localizer["ReviewDescription"]</p>
                    </div>
                </div>
                
                <!-- Add new task button -->
                <div class="px-4 py-3">
                    <button class="d-flex ui-max-w-480 align-items-center justify-content-center overflow-hidden rounded-3 ui-input-height-lg bg-primary text-white gap-2 fs-5 fw-bold lh-base min-w-0 px-4 w-100 dashboard-button">
                        <span class="truncate">@Localizer["AddNewTask"]</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
