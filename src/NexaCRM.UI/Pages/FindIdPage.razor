@page "/find-id-page"
@attribute [AllowAnonymous]
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<FindIdPage> Localizer

<div class="position-relative d-flex min-vh-100 flex-column bg-surface-soft overflow-x-hidden">
  <div class="layout-container d-flex h-100 flex-grow-1 flex-column">
    <div class="px-4 d-flex flex-grow-1 justify-content-center py-5">
      <div class="d-flex flex-column w-100 max-w-md py-5">
        <h2 class="text-ink fs-2 fw-bold lh-sm px-4 text-center pb-3 pt-5">@Localizer["FindId"]</h2>
        <p class="text-ink fs-5 fw-normal lh-base pb-3 pt-1 px-4 text-center">@Localizer["EnterEmail"]</p>
        <div class="d-flex flex-wrap align-items-end gap-4 px-4 py-3">
          <label class="d-flex flex-column w-100">
            <p class="text-ink fs-5 fw-semibold lh-base pb-2">@Localizer["EmailAddress"]</p>
            <input placeholder='@Localizer["EmailPlaceholder"]'
                   class="form-input d-flex w-100 overflow-hidden rounded-3 text-ink border border-soft bg-surface-soft ui-input-height-lg p-3 fs-5 fw-normal lh-base"
                   value="" />
          </label>
        </div>
        <div class="d-flex px-4 py-3 justify-content-center">
          <button class="d-flex w-100 max-w-md align-items-center justify-content-center overflow-hidden rounded-3 ui-input-height-lg px-4 bg-primary text-white small fw-bold lh-base">
            <span class="truncate">@Localizer["FindIdButton"]</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
