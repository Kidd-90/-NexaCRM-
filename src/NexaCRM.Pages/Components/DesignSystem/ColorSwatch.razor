@namespace NexaCRM.Pages.Components.DesignSystem
@using Microsoft.AspNetCore.Components

<div class="flex items-center gap-3">
    <div class="h-10 w-10 rounded border border-black/5 shadow-sm" style="background-color: @HexValue;"></div>
    <div class="text-sm leading-tight">
        <div class="font-semibold text-neutral-900 dark:text-neutral-100">@ColorName (@HexValue)</div>
        @if (!string.IsNullOrWhiteSpace(Description))
        {
            <div class="text-neutral-600 dark:text-neutral-300">@Description</div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string ColorName { get; set; } = string.Empty;

    [Parameter]
    public string HexValue { get; set; } = string.Empty;

    [Parameter]
    public string? Description { get; set; }
}
