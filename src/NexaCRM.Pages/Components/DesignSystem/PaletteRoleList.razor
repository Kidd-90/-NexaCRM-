@namespace NexaCRM.Pages.Components.DesignSystem
@using System
@using System.Collections.Generic
@using Microsoft.AspNetCore.Components
@using NexaCRM.Pages.DesignSystem

@if (Roles is not null && Roles.Count > 0)
{
    <div class="space-y-4">
        @foreach (var role in Roles)
        {
            <div class="flex flex-wrap items-center justify-between gap-3 rounded-lg border border-neutral-200 bg-white/80 p-4 shadow-sm dark:border-neutral-700 dark:bg-neutral-900/60">
                <div class="max-w-xs space-y-1">
                    <div class="text-sm font-semibold text-neutral-900 dark:text-neutral-100">@role.Role</div>
                    <div class="text-xs text-neutral-600 dark:text-neutral-300">@role.Usage</div>
                </div>
                <div class="flex items-center gap-3">
                    <div class="h-10 w-10 rounded-md border border-black/5 shadow-sm" style="background-color: @role.Color.Hex;"></div>
                    <div class="text-right text-xs text-neutral-700 dark:text-neutral-200">
                        <div>@role.Color.Name</div>
                        <code class="block rounded bg-neutral-200 px-2 py-0.5 font-mono text-[11px] text-neutral-700 dark:bg-neutral-800 dark:text-neutral-100">@role.Color.Hex</code>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="rounded-lg border border-dashed border-neutral-300 p-4 text-sm text-neutral-500 dark:border-neutral-700 dark:text-neutral-400">
        No palette roles supplied.
    </div>
}

@code {
    [Parameter]
    public IReadOnlyList<ColorRoleDefinition> Roles { get; set; } = Array.Empty<ColorRoleDefinition>();
}
