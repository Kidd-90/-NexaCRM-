@namespace NexaCRM.Pages.Components.DesignSystem
@using Microsoft.AspNetCore.Components
@using System.Linq

@if (Principles?.Any() == true)
{
    <ul class="space-y-2">
        @foreach (var principle in Principles!)
        {
            <li class="flex items-start gap-2">
                <span class="mt-1 inline-flex h-2 w-2 flex-shrink-0 rounded-full bg-emerald-400"></span>
                <span class="text-sm text-neutral-700 dark:text-neutral-200">@principle</span>
            </li>
        }
    </ul>
}
else
{
    <p class="text-sm italic text-neutral-500">No guiding principles provided.</p>
}

@code {
    [Parameter]
    public IReadOnlyList<string>? Principles { get; set; }
}
