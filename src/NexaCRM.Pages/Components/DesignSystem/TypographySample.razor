@namespace NexaCRM.Pages.Components.DesignSystem
@using Microsoft.AspNetCore.Components

<div class="space-y-1">
    <div class="text-xs uppercase tracking-wide text-neutral-500">@Token</div>
    <div style="font-size: @FontSize; line-height: @LineHeight; font-family: @FontFamily;" class="font-medium text-neutral-900 dark:text-neutral-100">
        @SampleText
    </div>
    @if (!string.IsNullOrWhiteSpace(Usage))
    {
        <div class="text-neutral-600 dark:text-neutral-300">@Usage</div>
    }
</div>

@code {
    private const string DefaultSample = "Quick pipeline wins bring momentum.";

    [Parameter]
    public string Token { get; set; } = string.Empty;

    [Parameter]
    public string FontSize { get; set; } = "16px";

    [Parameter]
    public string LineHeight { get; set; } = "24px";

    [Parameter]
    public string FontFamily { get; set; } = "'Inter', 'Lato', sans-serif";

    [Parameter]
    public string Usage { get; set; } = string.Empty;

    [Parameter]
    public string SampleText { get; set; } = DefaultSample;
}
