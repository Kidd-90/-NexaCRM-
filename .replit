modules = ["web", "nodejs-20", "dotnet-8.0", "python-3.11"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NexaCRM Frontend"

[[workflows.workflow]]
name = "NexaCRM Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/Web/NexaCRM.WebClient/wwwroot && python -m http.server 5000 --bind 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
